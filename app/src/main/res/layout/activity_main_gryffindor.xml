<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gryffindorroom2"
    android:orientation="vertical"
    tools:context=".main_gryffindor"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:elevation="5dp"
            android:src="@drawable/gryf"
            />

        <ImageButton
            android:id="@+id/BTNprofile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/profile_icon"
            android:elevation="2dp"
            android:textColor="@color/white"
            />
    </LinearLayout>

 <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/hello_gryf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:layout_marginTop="390dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/BTNwizards"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="60dp"
                android:layout_weight="0.1"
                android:background="@drawable/wizardhat"
                android:elevation="2dp"
                android:textColor="@color/white">

            </ImageButton>

            <TextView
                android:layout_width="60dp"
                android:layout_height="56dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/rounded"
                android:backgroundTint="#360D09"
                android:padding="5dip"
                android:textSize="20sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_marginTop="390dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/BTNpotion"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="60dp"
                android:layout_weight="0.1"
                android:background="@drawable/book"
                android:elevation="3dp"
                android:textColor="@color/white"></ImageButton>

            <TextView
                android:layout_width="60dp"
                android:layout_height="56dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/rounded"
                android:backgroundTint="#360D09"
                android:elevation="1dp"
                android:padding="5dip"
                android:textAlignment="center"
                android:textSize="10sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:layout_marginTop="390dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/BTNwand"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="200dp"

                android:layout_weight="0.1"
                android:background="@drawable/movies"
                android:elevation="2dp"
                android:textColor="@color/white"></ImageButton>

            <TextView
                android:layout_width="60dp"
                android:layout_height="56dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/rounded"
                android:backgroundTint="#360D09"
                android:elevation="1dp"
                android:padding="5dip"
                android:textSize="20sp" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:padding="5dip"
            android:text="Characters"
            android:textColor="@color/darkgrey"
            android:textAlignment="center"
            android:textSize="13sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:padding="5dip"
            android:text="Books"
            android:textAlignment="center"
            android:textColor="@color/darkgrey"
            android:textSize="13sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:padding="5dip"
            android:text="Movies"
            android:textAlignment="center"
            android:textColor="@color/darkgrey"
            android:textSize="13sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <FrameLayout
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/BTNbooks"
            android:layout_width="59dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="0.1"
            android:background="@drawable/potion"
            android:elevation="2dp"
            android:textColor="@color/white">

        </ImageButton>

        <TextView
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/rounded"
            android:backgroundTint="#360D09"
            android:padding="5dip"
            android:textSize="20sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/BTNwizard"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="60dp"
            android:layout_weight="0.1"
            android:background="@drawable/wand"
            android:elevation="2dp"
            android:textColor="@color/white">

        </ImageButton>

        <TextView
            android:layout_width="60dp"
            android:layout_height="56dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded"
            android:backgroundTint="#360D09"
            android:padding="5dip"
            android:textSize="20sp" />
    </FrameLayout>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/BTNspell"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="60dp"
                android:layout_weight="0.1"
                android:background="@drawable/spells"
                android:elevation="2dp"
                android:textColor="@color/white">

            </ImageButton>

            <TextView
                android:layout_width="60dp"
                android:layout_height="56dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/rounded"
                android:backgroundTint="#360D09"
                android:padding="5dip"
                android:textSize="20sp" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:padding="5dip"
            android:text="Potions"
            android:textAlignment="center"
            android:textColor="@color/darkgrey"
            android:textSize="13sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:padding="5dip"
            android:text="Wands"
            android:textColor="@color/darkgrey"
            android:textAlignment="center"
            android:textSize="13sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:padding="5dip"
            android:text="Spells"
            android:textColor="@color/darkgrey"
            android:textAlignment="center"
            android:textSize="13sp" />

    </LinearLayout>
</LinearLayout>
