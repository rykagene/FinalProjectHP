<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wands_bg"
    android:orientation="vertical"
    tools:context=".main_wands">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/wands" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ETsearch"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.7"
                android:background="@drawable/rounded"
                android:backgroundTint="#202020"
                android:gravity="center"
                android:hint="Search a wand"
                android:paddingLeft="10dp"
                android:textColorHint="@color/darkgrey"
                android:textSize="18sp"
                >

            </EditText>

            <ImageButton
                android:id="@+id/BTNsearch"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.1"
                android:background="@drawable/search"
                android:elevation="1dp"
                android:text="Search"
                android:textColor="@color/white">

            </ImageButton>

            <ImageButton
                android:id="@+id/BTNclear"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.1"
                android:background="@drawable/clear"
                android:elevation="3dp"
                android:text="Clear"
                android:textColor="@color/white">

            </ImageButton>

        </LinearLayout>

        <ImageView
            android:id="@+id/IVwand"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/wandp"
            android:elevation="1dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/TVname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="1dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="30dp"
            android:text="WAND"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/TVmanu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#B4B4B4"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:text="Manufacturer: " />

        <TextView
            android:id="@+id/TVmade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#B4B4B4"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:text="Made: " />


        <TextView
            android:id="@+id/TVwood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#B4B4B4"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:text="Wood: " />


        <TextView
            android:id="@+id/TVcore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#B4B4B4"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:text="Core: " />

        <TextView
            android:id="@+id/TVlength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#B4B4B4"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:text="Length: " />

        <TextView
            android:id="@+id/TVchar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#B4B4B4"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:text="Characteristics: " />

        <TextView
            android:id="@+id/TVowners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#B4B4B4"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:text="Owned by: " />






    </LinearLayout>

</ScrollView>